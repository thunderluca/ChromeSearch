<Page
    x:Class="ChromeSearch.WinPhone.WebPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChromeSearch.WinPhone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <WebView x:Name="WebView"
             NavigationStarting="OnNavigationStarting" />

    <Page.BottomAppBar>
        <CommandBar Background="{StaticResource GoogleBackgroundBrush}"
                    Foreground="{StaticResource GoogleForegroundBrush}">
            <AppBarButton Icon="Back" Label="Back" />
            <AppBarButton Label="Search"
                          Foreground="{StaticResource GoogleForegroundBrush}">
                <AppBarButton.Icon>
                    <BitmapIcon UriSource="/Assets/google.png" />
                </AppBarButton.Icon>
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
